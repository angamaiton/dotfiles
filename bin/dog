#!/usr/bin/env bash

# use 3rd-party program to cat file with syntax highlighting
#

set -e

__has() {
  command -v "$1" >/dev/null 2>&1
}

__is_markdown() {
  test "${1: -3}" == ".md"
}

__cmd() {
  if __has "ccat"; then
    echo "ccat"
  elif __is_markdown "${1}" && __has "mdless"; then
    echo "mdless --no-pager --width=80"
  elif __has "pygmentize"; then
    echo "pygmentize -O style=rrt -f console256 -g"
  else
    echo "command cat"
  fi
}

__dog() {
  local filename="$1"
  local cmd
  cmd=$(__cmd "${filename}")
  eval "${cmd} \"${filename}\""
}

[ -n "$1" ] && [ -f "$1" ] && __dog "$1"
